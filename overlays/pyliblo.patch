+++ b/src/liblo.pyx
@@ -238,12 +238,12 @@ cdef int _msg_callback(const_char *path, const_char *types, lo_arg **argv,
         elif t == 't': v = _timetag_to_double(argv[i].t)
         elif t == 'b':
             if PY_VERSION_HEX >= 0x03000000:
-                v = bytes(<unsigned char*>lo_blob_dataptr(argv[i]))
