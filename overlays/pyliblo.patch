             else:
                 # convert binary data to python list
                 v = []
-                ptr = <unsigned char*>lo_blob_dataptr(argv[i])
-                size = lo_blob_datasize(argv[i])
+                ptr = <unsigned char*>lo_blob_dataptr(<lo_blob>argv[i])
+                size = lo_blob_datasize(<lo_blob>argv[i])
                 for j from 0 <= j < size:
                     v.append(ptr[j])
